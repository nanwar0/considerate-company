<div>
  <div>
    <h1>
      Diet #<%= @the_diet.id %> details
    </h1>

    <div>
      <div>
        <a href="/diets">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_diet/<%= @the_diet.id %>">
          Delete diet
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_diet.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_diet.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_diet.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit diet
    </h2>

    <form action="/modify_diet/<%= @the_diet.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_diet.name %>">
      </div>

      <button>
        Update diet
      </button>
    </form>
  </div>
</div>

<hr>
