<div>
  <div>
    <h1>
      List of all groups
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new group
    </h2>

    <form action="/insert_group" method="post">
      <div>
        <label for="friend_id_box">
          Friend
        </label>

        <input type="text" id="friend_id_box" name="query_friend_id">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <button>
        Create group
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Friend
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_groups.each do |a_group| %>
      <tr>
        <td>
          <%= a_group.id %>
        </td>

        <td>
          <%= a_group.friend_id %>
        </td>

        <td>
          <%= a_group.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_group.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_group.updated_at) %> ago
        </td>

        <td>
          <a href="/groups/<%= a_group.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
